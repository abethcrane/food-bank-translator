<Label, TextInput, Button>:
    font_name: "/Library/Fonts/Arial Unicode.ttf"

<Label>:
    text_size: self.width, self.height

<Button>:
    size_hint_y: None
    text_size: self.width, None
    padding_x: 5
    padding_y: 5
    valign: "middle"
    halign: "center"

<Thumbnail>:
    image: image.__self__

    GridLayout:
        size_hint: 1, None
        size: root.size
        pos: root.pos
        rows: 2

        Image:
            id: image
            source: root.filepath

        GridLayout:
            id: newThumbButtons
            size: root.size
            pos: root.pos
            cols: 2

            Button:
                text: "↻"
                on_press: root.DownloadNewThumb()
            Button:
                text: "↺"
                on_press: root.DownloadPrevThumb()

<SpreadsheetRow>:
    gridLayout: gridLayout

    GridLayout:
        id: gridLayout
        size: root.size
        pos: root.pos
        cols: 1 + root.numOutputLangs + 1 # input, output, image
        row: 1 # The spreadsheet itself has: 1 + root.numWords + 1 # header, words, new line for extra words 

        TextInput:
            text: root.inputWord
            size_hint: 1, 1

<Translator>:  
    spreadsheetViewer: spreadsheetViewer.__self__
    canvas:
        Rectangle:
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

    GridLayout: # spreadsheet vs buttons
        id: appGrid
        size: root.size 
        pos: root.pos
        rows: 2 

        RecycleView:
            id: spreadsheetViewer
            size: root.size
            pos: root.pos
            scroll_type: ['bars', 'content']
            bar_width: 50
            viewclass: 'SpreadsheetRow'
            RecycleBoxLayout:
                default_size: 1000, 300
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        GridLayout: #buttons
            size_hint: 1, None
            size: self.size
            cols: 4

            Button:
                text: "Import from spreadsheet"
                on_press: root.ImportFromSpreadsheet()

            Button:
                text: "Generate translations"
                on_press: root.GenerateTranslations()

            Button:
                text: "Export to spreadsheet"
                on_press: root.ExportToSpreadsheet()

            Button:
                text: "Create output images"
                on_press: root.OutputImages()