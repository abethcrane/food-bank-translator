<Label, TextInput, Button>:
    font_name: "/Library/Fonts/Arial Unicode.ttf"

<Label>:
    text_size: self.width, self.height

<Button>:
    size_hint_y: None
    text_size: self.width, None
    padding_x: 5
    padding_y: 5
    valign: "middle"
    halign: "center"

<Thumbnail>:
    image: image.__self__

    GridLayout:
        size_hint: 1, None
        size: root.size
        pos: root.pos
        rows: 2

        Image:
            id: image
            source: root.filepath
        Button:
            text: "Download new thumbnail"
            on_press: root.DownloadNewThumb()

<Translator>:  
    imageViewer: imageViewer.__self__
    inputWords: inputWords.__self__

    canvas:
        Rectangle:
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

    GridLayout:
        size: root.size 
        pos: root.pos
        rows: 2 

        GridLayout:
            size: root.size
            pos: root.pos
            rows: 2

            GridLayout:
                id: spreadsheetViewer   
                size: root.size    
                pos: root.pos
                cols: 5
                
                TextInput:
                    id: inputWords
                    size_hint: 1, 1

                TextInput:
                    text: root.lang1
                    color: 0, 0, 0, 1
                    valign: "top"

                TextInput:
                    text: root.lang2
                    color: 0, 0, 0, 1
                    valign: "top"

                TextInput:
                    text: root.lang3
                    color: 0, 0, 0, 1
                    valign: "top"

                RecycleView:
                    size: root.size
                    pos: root.pos
                    id: imageViewer
                    scroll_type: ['bars', 'content']
                    bar_width: 50
                    viewclass: 'Thumbnail'
                    RecycleBoxLayout:
                        default_size: 500, 300
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'

            GridLayout:
                size_hint: 1, None
                size: self.size
                cols: 3

                Button:
                    text: "Output translations"
                    on_press: root.OutputTranslations(inputWords)

                Button:
                    text: "Display thumbnails"
                    on_press: root.DisplayThumbnails()

                Button:
                    text: "Create output images"
                    on_press: root.OutputImages()
