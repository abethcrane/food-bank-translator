<Label, TextInput, Button>:
    font_name: "/Library/Fonts/Arial Unicode.ttf"

<Label>:
    text_size: self.width, self.height
    size: self.texture_size

<Button>:
    size_hint_y: None
    text_size: self.width, None
    size: self.texture_size
    padding_x: 5
    padding_y: 5
    valign: "middle"
    halign: "center"


<Thumbnail>:
    image: image.__self__

    GridLayout: #Displays the image above the 2 buttons
        size_hint: None, None
        size: root.size
        pos: root.pos
        rows: 2

        Image:
            id: image
            source: root.filepath

        GridLayout: # Buttons for changing the image
            id: newThumbButtons
            size: root.size
            pos: root.pos
            cols: 2

            Button:
                text: "↺"
                on_press: root.DownloadPrevThumb()
            Button:
                text: "↻"
                on_press: root.DownloadNewThumb()

<SpreadsheetRow>:
    gridLayout: gridLayout.__self__
    size_hint_y: None

    GridLayout: #Grid layout that holds the entire row of data
        id: gridLayout
        size: root.size
        pos: root.pos
        cols: 1 + root.numOutputLangs + 1 # input, output, image
        row: 1 # The spreadsheet itself has: 1 + root.numWords + 1 # header, words, new line for extra words 

<Translator>:  
    spreadsheetViewer: spreadsheetViewer.__self__
    canvas:
        Rectangle:
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

    GridLayout: # spreadsheet vs buttons
        id: appGrid
        size: root.size 
        pos: root.pos
        rows: 2 

        ScrollView: # spreadsheet
            size: root.size
            pos: root.pos
            scroll_type: ['bars', 'content']
            bar_width: 50
            do_scroll_x: False
            GridLayout:
                id: spreadsheetViewer
                size_hint_y: None
                height: self.minimum_height
                cols: 1
                pos: root.pos
                padding: 10
                spacing: 10

        GridLayout: #buttons
            size_hint: 1, None
            height: self.minimum_height
            rows: 1

            Button:
                text: "Import from spreadsheet"
                on_press: root.ImportFromSpreadsheet()

            Button:
                text: "Generate translations"
                on_press: root.GenerateTranslations()

            Button:
                text: "Export to spreadsheet"
                on_press: root.ExportToSpreadsheet()

            Button:
                text: "Create output images"
                on_press: root.OutputImages()

            Button:
                text: "Add new word"
                on_press: root.CreateEmptySpreadsheetRow()