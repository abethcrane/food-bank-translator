<Label>:
    font_name: "/Library/Fonts/Arial Unicode.ttf"

<Thumbnail>:
    image: image.__self__
    label: label.__self__
    canvas:
        Color:
            rgba: 0.7, 0.2, 0.7, 0.5
        Rectangle:
            size: root.size
            pos: root.pos

    GridLayout:
        cols: 2
        size_hint: None, None
        size: root.size
        pos: root.pos

        Label:
            id: label
            text: root.name
            text_size: self.size
            color: 0, 0, 0, 1
        Image:
            id: image
            source: root.filepath

<Translator>:  
    imageViewer: imageViewer.__self__

    canvas:
        Rectangle:
            size: self.size
        Color:
            rgba: 1, 0, 0, 1

    GridLayout:
        cols: 3
        size: root.size 
        pos: root.pos

        GridLayout:
            rows: 2
            size: root.size
            pos: root.pos

            TextInput:
                size_hint: 1, None
                size: root.size[0], root.size[1] * 0.6
                id: inputWords

            GridLayout:
                size_hint: 1, None
                size: root.size[0], root.size[1] * 0.6
                cols: 3

                Button:
                    text: "Output translations"
                    on_press: root.OutputTranslations(inputWords)

                Button:
                    text: "Display thumbnails"
                    on_press: root.DisplayThumbnails()

                Button:
                    text: "Create output images"
                    #on_press: root.DownloadThumbnails()

        GridLayout:
            id: spreadsheetViewer   
            cols: 3 
            pos: root.pos
            size: root.size    
            
            Label:
                text: root.lang1
                color: 0, 0, 0, 1

            Label:
                text: root.lang2
                color: 0, 0, 0, 1
            Label:
                text: root.lang3
                color: 0, 0, 0, 1

        GridLayout:
            size: root.size
            pos: root.pos
            cols: 1
            id: imageViewer

<SpreadsheetViewer>:
    GridLayout:
        cols: 3
        pos: root.pos
        size: root.size
